@model AppUser
@{
    ViewData["Title"] = "Edit";
}

<div class="login_signup_page">
    <header>
        <h2>edit profile</h2>
    </header>
    <form asp-action="Edit" enctype="multipart/form-data" method="post" class="form">
        <input type="hidden" asp-for="Id" class="form-control" disabled />
        <div class="form-group">
            <h4>first name</h4>
            <label asp-for="UserName" hidden></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <h4>last name</h4>
            <label asp-for="LastName" hidden></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group upload">
            <h4>profile picture</h4>
            <span asp-validation-for="ProfilePic" class="text-danger"></span>
            <label asp-for="ProfilePic" for="editProfilePic" class="btn upload-button">choose profile picture
            <img id="changeProfilePic" src="~/images/profilePics/@Model.ProfilePic" class="img-preview-profilePic" />
            </label>
            <input id="editProfilePic" title="Upload a image" onchange="imagePreview(event, 'changeProfilePic')" name="pictureFile" type="file" hidden />
            <input type="hidden" name="profilePic" value="@Model.ProfilePic" />
        </div>
        <div class="form-group">
            <h4>email</h4>
            <label asp-for="Email" hidden></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <h4>city</h4>
            <label asp-for="City" hidden></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-buttons edit-profile">
            <a class="btn red-button dark" asp-controller="Home" asp-action="Index">
                <p>cancel</p>
            </a>
            <div class="form-submit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <button type="submit" class="btn submit_button">
                    <p>edit</p>
                </button>
            </div>
        </div>
    </form>
</div>

<script src="~/script/showProductDisplay.js"></script>
